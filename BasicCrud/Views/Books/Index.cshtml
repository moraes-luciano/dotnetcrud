@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}
<br />
<div class="d-flex">
    <h2 class="mt-5 flex-grow-1">Books</h2>
    <a asp-controller="Books" asp-action="Create">
        <div class="btn btn-primary mt-5">
            <i class="bi bi-plus-circle "></i>
            Add Book
        </div>
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover mt-3">
        <thead class="table-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Publishing</th>
                <th scope="col">Edition</th>
                <th scope="col">Pages</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody .table-striped>
            @if (!Model.Any())
            {
                <tr>
                    <td>--</td>
                    <td>--</td>
                    <td>--</td>
                    <td>--</td>
                    <td>--</td>
               
                </tr>
            }
            @foreach (Book obj in Model)
            {
        <tr>
            <td>@obj.Id</td>
            <td>@obj.Name</td>
            <td>@obj.Publishing</td>
            <td>@obj.Edition</td>
            <td>@obj.NumberOfPages</td>
            <td>
               
                    <a asp-controller="Books" asp-action="Update" asp-route-id="@obj.Id" class ="btn btn-outline-success">
                        <i class="bi bi-pencil-square">Update</i>
                    </a>
            
               
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash">Delete</i>
                    </a>
              
            </td>
        </tr>
            }




        </tbody>
    </table>
</div>
